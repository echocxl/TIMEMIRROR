<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/back" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="132dp"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="169dp"
        android:layout_marginStart="58dp"
        android:scaleType="fitCenter"
        android:src="@drawable/help" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="132dp"
        android:layout_height="110dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageButton7"
        android:layout_marginEnd="57dp"
        android:scaleType="fitCenter"
        android:src="@drawable/about" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:scaleType="fitCenter"
        android:layout_width="132dp"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageButton7"
        android:layout_marginBottom="37dp"
        android:src="@drawable/counts" />

    <ImageButton
        android:id="@+id/imageButton10"
        android:layout_width="132dp"
        android:layout_height="110dp"
        android:layout_alignStart="@+id/imageButton8"
        android:layout_alignTop="@+id/imageButton9"
        android:scaleType="fitCenter"
        android:src="@drawable/times" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageButton7"
        android:layout_marginStart="88dp"
        android:layout_marginTop="-169dp"
        android:text="使用帮助" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageButton7"
        android:layout_marginEnd="78dp"
        android:layout_marginTop="-169dp"
        android:text="关于作者" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/imageButton9"
        android:layout_marginTop="-37dp"
        android:text="次数统计" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/imageButton9"
        android:layout_marginTop="-37dp"
        android:text="时间统计" />

</RelativeLayout>
